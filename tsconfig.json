{
    "compilerOptions": {
        "lib": ["esnext"],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "esModuleInterop": true,
        "module": "ESNext",
        "moduleResolution": "bundler",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "incremental": true,
        "declaration": true,
        "outDir": "dist",
        "target": "es2018",
    },
    "include": ["src/**/*.ts"],
    "exclude": ["**/*.test.*"],
}
